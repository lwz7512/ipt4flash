xtends Event {		//--------------------------------------		// EVENT CONSTANTS		//--------------------------------------		/**		 * The <code>NpScrollingPanelEvent.CLICKED</code> constant defines the value of the <code>type</code> property of the event object for a <code>clicked</code> event.		 *	<p>You can access each content item clicked on via the <code>target</code> property of this event!</p>		 * <p>		 * The properties of the event object have the following values:		 * </p>		 * <table class="innertable">		 * <tr><th>Property</th> <th>Value</th></tr>		 * <tr><td><code>type</code></td> <td><code>"clicked"</code></td></tr>		 * <tr><td><code>bubbles</code></td> <td><code>true</code></td></tr>		 * <tr><td><code>cancelable</code></td> <td><code>false</code></td></tr>		 * <tr><td><code>id</code></td> <td><code>Number - the ID of the content item clicked on</code></td></tr>		 * <tr><td><code>trackPos</code></td> <td><code>undefined</code></td></tr>		 * <tr><td><code>thumbpad</code></td> <td><code>undefined</code></td></tr>		 * </table>		 *		 * @eventType clicked		 */		 		public static  const CLICKED:String = "clicked";				/**		 * The <code>NpScrollingPanelEvent.MOUSE_ON</code> constant defines the value of the <code>type</code> property of the event object for a <code>mouseOn</code> event.		 *	<p>You can access each content item moused over on via the <code>target</code> property of this event!</p>		 * <p>		 * The properties of the event object have the following values:		 * </p>		 * <table class="innertable">		 * <tr><th>Property</th> <th>Value</th></tr>		 * <tr><td><code>type</code></td> <td><code>"mouseOn"</code></td></tr>		 * <tr><td><code>bubbles</code></td> <td><code>true</code></td></tr>		 * <tr><td><code>cancelable</code></td> <td><code>false</code></td></tr>		 * <tr><td><code>id</code></td> <td><code>Number - the ID of the content item moused over</code></td></tr>		 * <tr><td><code>trackPos</code></td> <td><code>undefined</code></td></tr>		 * <tr><td><code>thumbpad</code></td> <td><code>undefined</code></td></tr>		 * </table>		 *		 * @eventType mouseOn		 */		public static  const MOUSE_ON:String = "mouseOn";				/**		 * The <code>NpScrollingPanelEvent.MOUSE_OFF</code> constant defines the value of the <code>type</code> property of the event object for a <code>mouseOff</code> event.		 *	<p>You can access each content item moused off on via the <code>target</code> property of this event!</p>		 * <p>		 * The properties of the event object have the following values:		 * </p>		 * <table class="innertable">		 * <tr><th>Property</th> <th>Value</th></tr>		 * <tr><td><code>type</code></td> <td><code>"mouseoff"</code></td></tr>		 * <tr><td><code>bubbles</code></td> <td><code>true</code></td></tr>		 * <tr><td><code>cancelable</code></td> <td><code>false</code></td></tr>		 * <tr><td><code>id</code></td> <td><code>Number - the ID of the content item moused off</code></td></tr>		 * <tr><td><code>trackPos</code></td> <td><code>undefined</code></td></tr>		 * <tr><td><code>thumbpad</code></td> <td><code>undefined</code></td></tr>		 * </table>		 *		 * @eventType mouseOff		 */		 		public static  const MOUSE_OFF:String = "mouseOff";				/**		 * The <code>NpScrollingPanelEvent.SCROLLING</code> constant defines the value of the <code>type</code> property of the event object for a <code>scrolling</code> event.		 *	<p>You can use this event to update sliders etc based off the position of the scrolling content</p>		 * <p>		 * The properties of the event object have the following values:		 * </p>		 * <table class="innertable">		 * <tr><th>Property</th> <th>Value</th></tr>		 * <tr><td><code>type</code></td> <td><code>"scrolling"</code></td></tr>		 * <tr><td><code>bubbles</code></td> <td><code>true</code></td></tr>		 * <tr><td><code>cancelable</code></td> <td><code>false</code></td></tr>		 * <tr><td><code>id</code></td> <td><code>undefined</code></td></tr>		 * <tr><td><code>trackPos</code></td> <td><code>Number - represents a percentage the content has scrolled within the NpScrollPanel</code></td></tr>		 * <tr><td><code>thumbpad</code></td> <td><code>undefined</code></td></tr>		 * </table>		 *		 * @eventType scrolling		 */		 		public static  const SCROLLING:String  = "scrolling";				//--------------------------------------		// PUBLIC VARS		//--------------------------------------		public var id:Number;		public var trackPos:Number;				//--------------------------------------		// CONSTRUCTOR		//--------------------------------------				/**		*	<strong>NpScrollingPanelEvent</strong>		*   Extended Event class used by the NpScrollingPanel and NpScrollingPanelItem Classes to communicate with each other, and with the outside world.		* 	<p>This event object for this class contains two useful properties. The first is the <code>id</code> property, which allows for you to ascertain what content item		*	is currently under the mouse. The second is the <code>trackPos</code> property, which represents what scroll position (as a percent) the scrolling panel is currently in</p>		*	@langversion ActionScript 3.0		*	@playerversionFlash 9		*/		public function NpScrollingPanelEvent(type:String, bubbles:Boolean = true, cancelable:Boolean = false, id:Number = undefined, trackPos:Number = undefined) {			super(type, bubbles, cancelable);			this.id=id;			this.trackPos = trackPos;		}				override public function clone():Event {			return new NpScrollingPanelEvent(this.type, this.bubbles, this.cancelable, this.id, this.trackPos);		}				override public function toString():String {			return formatToString("NpScrollingPanelEvent ","type", "bubbles", "cancelable", "eventPhase", "id", "trackPos");		}	}}